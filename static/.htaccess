<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTP:X-Forwarded-Proto} !https
    RewriteRule (.*) https://www.greyhat.dk/$1 [R=301,L]

    RewriteCond %{HTTP_HOST} !^www\.
    RewriteRule ^(.*)$ http://www.%{HTTP_HOST}/$1 [R=301,L]

    Redirect /2013/04/dns-amplification-by-example/ /dns-amplification-by-example/
</IfModule>
<IfModule mod_headers.c>
    Header set Strict-Transport-Security "max-age=10886400; includeSubDomains; preload" env=HTTPS
    Header set X-Frame-Options deny
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Content-Type-Options "nosniff"
    Header set Content-Security-Policy "script-src 'self';"
    Header set Referrer-Policy "no-referrer"
</IfModule>
